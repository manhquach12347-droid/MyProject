{
  "name": "myproject",
  "version": "1.0.0",
  "description": "Node.js application with CI/CD pipeline for Google Cloud",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "echo 'Build completed successfully' && echo 'No build step required for this simple Node.js app'"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "devDependencies": {
    "jest": "^30.2.0"
  }
}
